{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-and-run-debug-qemu",
      "type": "shell",
      "command": "make DEBUG=1 debug-run",
      "isBackground": true,
      "problemMatcher": {
        "owner": "fake",
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "."
        }
      }
    },
    {
      "label": "kill-qemu",
      "type": "shell",
      "command": "pkill -9 -f qemu-system-i386"
    }
  ]
}
