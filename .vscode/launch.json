{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug WaddleOS Kernel",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/isodir/boot/waddleos.kernel",
      "miDebuggerPath": "i686-elf-gdb",
      "miDebuggerArgs": "--eval-command=set print elements 0",
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "targetArchitecture": "x86",
      "externalConsole": false,
      "preLaunchTask": "build-and-run-debug-qemu",
      "customLaunchSetupCommands": [
        {
          "text": "file ${workspaceFolder}/isodir/boot/waddleos.kernel"
        },
        {
          "text": "target remote localhost:1234"
        }      ],
      "setupCommands": [
        {
          "description": "Enable pretty printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "logging": {
        "engineLogging": true
      }
    }
  ]
}
